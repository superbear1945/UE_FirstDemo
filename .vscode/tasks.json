{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Test [Development Editor Win64]", // <-- 确保与launch.json中的preLaunchTask匹配
            "type": "shell",
            "command": "D:/epic/UE_5.6/Engine/Build/BatchFiles/Build.bat", // <-- 1. 修改您的引擎路径
            "args": [
                "TestEditor", // <-- 2. 修改您的项目名称
                "Win64",
                "Development",
                "-Project=${workspaceFolder}/Test.uproject", // <-- 3. 修改您的.uproject文件完整路径
                "-waitmutex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true //不想默认使用该配置编译则改为 false
            },
            "problemMatcher": "$msCompile",
            "detail": "Builds the project for the editor.",
        }
        // 您可以添加更多任务，例如 "DebugGame", "Shipping" 等
    ]
}